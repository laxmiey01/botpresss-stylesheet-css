/* custom-styles.css */

/* Change the background color of the chat window to a rustic green */
.bpw-chat-container {
  background-color: #e0f2e9; /* Light green */
  background-image: url('https://www.transparenttextures.com/patterns/wood-pattern.png'); /* Rustic wood pattern */
  color: #2f4f4f; /* Dark slate gray text for better readability */
}

/* Change the text color */
.bpw-chat-message {
  color: #2f4f4f; /* Dark slate gray */
}

/* Customize the user chat bubbles with a darker green */
.bpw-chat-bubble.user {
  background-color: #556b2f; /* Dark olive green */
  color: #ffffff; /* White text */
  border-radius: 10px;
  padding: 10px;
  margin: 5px;
  max-width: 60%;
  align-self: flex-end;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Subtle shadow for a rustic feel */
}

/* Customize the bot chat bubbles with a lighter green */
.bpw-chat-bubble.bot {
  background-color: #8fbc8f; /* Dark sea green */
  color: #2f4f4f; /* Dark slate gray text */
  border-radius: 10px;
  padding: 10px;
  margin: 5px;
  max-width: 60%;
  align-self: flex-start;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Subtle shadow for a rustic feel */
}

/* Change the font size */
.bpw-chat-message {
  font-size: 16px;
  font-family: 'Georgia', serif; /* Rustic font style */
}

/* Change the input area background and text color */
.bpw-chat-footer {
  background-color: #e0f2e9; /* Light green */
  color: #2f4f4f; /* Dark slate gray text */
}

/* Customize the send button */
.bpw-chat-send-button {
  background-color: #556b2f; /* Dark olive green */
  color: #ffffff; /* White text */
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.bpw-chat-send-button:hover {
